    <script>
        document.getElementById('promptForm').addEventListener('submit', function(e) {
            e.preventDefault();
            generatePrompt();
        });

        function toggleCustomRole() {
            const roleSelect = document.getElementById('role');
            const customRoleInput = document.getElementById('customRole');
            if (roleSelect.value === 'Other') {
                customRoleInput.classList.remove('hidden');
                customRoleInput.focus();
            } else {
                customRoleInput.classList.add('hidden');
                customRoleInput.value = '';
            }
        }

        function toggleCustomSector() {
            const sectorSelect = document.getElementById('sector');
            const customSectorInput = document.getElementById('customSector');
            if (sectorSelect.value === 'Other') {
                customSectorInput.classList.remove('hidden');
                customSectorInput.focus();
            } else {
                customSectorInput.classList.add('hidden');
                customSectorInput.value = '';
            }
        }

        function toggleCustomPurpose() {
            const purposeSelect = document.getElementById('purpose');
            const customPurposeInput = document.getElementById('customPurpose');
            if (purposeSelect.value === 'Other') {
                customPurposeInput.classList.remove('hidden');
                customPurposeInput.focus();
            } else {
                customPurposeInput.classList.add('hidden');
                customPurposeInput.value = '';
            }
        }

        function toggleCustomTone() {
            const toneSelect = document.getElementById('tone');
            const customToneInput = document.getElementById('customTone');
            if (toneSelect.value === 'Other') {
                customToneInput.classList.remove('hidden');
                customToneInput.focus();
            } else {
                customToneInput.classList.add('hidden');
                customToneInput.value = '';
            }
        }

        function generatePrompt() {
            let role = document.getElementById('role').value;
            let sector = document.getElementById('sector').value;
            let purpose = document.getElementById('purpose').value;
            let tone = document.getElementById('tone').value;
            const details = document.getElementById('details').value;

            // Use custom inputs if "Other" is selected
            if (role === 'Other') {
                role = document.getElementById('customRole').value.trim();
            }
            if (sector === 'Other') {
                sector = document.getElementById('customSector').value.trim();
            }
            if (purpose === 'Other') {
                purpose = document.getElementById('customPurpose').value.trim();
            }
            if (tone === 'Other') {
                tone = document.getElementById('customTone').value.trim();
            }

            if (!role || !sector || !purpose || !tone) {
                alert('Please fill in all required fields before generating your prompt.');
                return;
            }

            // Enhanced prompt with specific instructions for better AI output
            let prompt = `You are an experienced ${role} with deep expertise in the ${sector} sector, working for a nonprofit organization focused on sustainable development and community impact. Your task is to ${purpose.toLowerCase()}.

CONTEXT & REQUIREMENTS:
- Target audience: ${tone.toLowerCase()} stakeholders
- Sector focus: ${sector} with emphasis on evidence-based approaches
- Output should follow international development best practices and standards`;

            if (details.trim()) {
                prompt += `
- Additional context: ${details.trim()}`;
            }

            prompt += `

SPECIFIC INSTRUCTIONS:
1. Use clear, professional language appropriate for ${tone.toLowerCase()} audiences
2. Include relevant metrics, indicators, or data points where applicable
3. Reference established frameworks (SDGs, Theory of Change, Results Framework, etc.)
4. Ensure cultural sensitivity and local context considerations
5. Provide actionable recommendations with clear next steps
6. Include potential challenges and mitigation strategies
7. Consider sustainability and long-term impact

OUTPUT FORMAT:
- Structure your response with clear headings and bullet points
- Include executive summary if appropriate for ${tone.toLowerCase()} audience
- Provide specific examples or case studies when relevant
- End with concrete next steps and timeline recommendations

Please ensure the output is practical, implementable, and aligned with current development sector standards and donor requirements.`;

            document.getElementById('generatedPrompt').textContent = prompt;
            document.getElementById('outputSection').classList.remove('hidden');
            document.getElementById('outputSection').scrollIntoView({ behavior: 'smooth' });
        }

        function copyPrompt() {
            const prompt = document.getElementById('generatedPrompt').textContent;
            navigator.clipboard.writeText(prompt).then(function() {
                const button = event.target;
                const originalText = button.innerHTML;
                button.innerHTML = 'âœ… Copied!';
                button.classList.add('bg-green-700');
                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.classList.remove('bg-green-700');
                }, 2000);
            });
        }

        function generateNew() {
            document.getElementById('promptForm').reset();
            document.getElementById('outputSection').classList.add('hidden');
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>
